<idea-plugin>
    <id>org.jetbrains.plugins.template</id>
    <name>Rossynt</name>
    <vendor>GitHubPang</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.example.githubpang.services.BackendService"/>
        <projectService serviceImplementation="org.jetbrains.plugins.template.services.MyProjectService"/>
        <toolWindow id="Rossynt" secondary="true" icon="AllIcons.Actions.ShowAsTree" anchor="right"
                factoryClass="org.jetbrains.plugins.template.toolWindow.MyToolWindowFactory"/>
    </extensions>

    <applicationListeners>
        <listener class="org.jetbrains.plugins.template.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
        <listener class="org.jetbrains.plugins.template.listeners.MyFileEditorManagerListener"
                  topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </applicationListeners>

    <projectListeners>
        <listener class="org.jetbrains.plugins.template.listeners.MyToolWindowManagerListener"
                  topic="com.intellij.openapi.wm.ex.ToolWindowManagerListener"/>
    </projectListeners>
</idea-plugin>
